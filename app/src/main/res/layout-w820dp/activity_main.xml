<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <FrameLayout
        android:id="@+id/tabletListLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#E4E2E2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3"></FrameLayout>

    <FrameLayout
        android:id="@+id/tabletDetailLayout"
        android:layout_width="803dp"
        android:layout_height="1315dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/tabletListLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.7"></FrameLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="357dp"
        android:layout_height="158dp"
        android:layout_marginStart="209dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tabletListLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stopcorona" />

</androidx.constraintlayout.widget.ConstraintLayout>